@model IEnumerable<MobAppViewModel>

<div class="bg-primary m-1 p-1 text-white"><h4>Customers</h4></div>

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Application name</th>
        <th>AppBundle</th>
        <th>Platform</th>
        <th>Customer name</th>
        <th>Product Owner</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="7" class="text-center">No MobApps.</td></tr>
    }
    else
    {
        foreach (MobAppViewModel app in Model)
        {
            <tr>
                <td>@app.Id</td>
                <td>@app.Name</td>
                <td>@app.AppBundle</td>
                <td>@app.Platform.ToString()</td>
                <td>@app.CustomerName</td>
                <td>@app.ProductOwnerName</td>
                <td><a class="btn btn-sm btn-primary" asp-action="EditMobApp" asp-route-id="@app.Id">Edit</a></td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="CreateMobApp">Create new app</a>